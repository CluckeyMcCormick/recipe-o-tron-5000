<p id="notice"><%= notice %></p>

<h1>Listing Item Class Inclusions</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Item class</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @item_class_inclusions.each do |item_class_inclusion| %>
      <tr>
        <td><%= item_class_inclusion.item %></td>
        <td><%= item_class_inclusion.item_class %></td>
        <td><%= link_to 'Show', item_class_inclusion %></td>
        <td><%= link_to 'Edit', edit_item_class_inclusion_path(item_class_inclusion) %></td>
        <td><%= link_to 'Destroy', item_class_inclusion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

